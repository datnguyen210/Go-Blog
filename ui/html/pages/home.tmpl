{{define "title"}}Home{{end}}

{{define "main"}}
    <h2>Recent posts</h2>
    {{if .Blogs}}
    <table> 
        <tr> 
            <th>Title</th> 
            <th>Created</th> 
            <th>ID</th> 
        </tr> 
        {{range .Blogs}} 
        <tr> 
            <td><a href='/blog/view?id={{.ID}}'>{{.Title}}</a>
            <td>{{.Created}}</td> 
            <td>#{{.ID}}</td> 
        </tr> 
        {{end}} 
    </table> 
    {{else}}
    <p>There's nothing to display.</p>
    {{end}}
{{end}}